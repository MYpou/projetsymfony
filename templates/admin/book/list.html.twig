
{% extends 'base.html.twig' %}

{% block title %}Liste des Livres{% endblock %}

{% block main %}

<h2>Liste des livres</h2>

<div class="booksListContainer">

  {% for book in books %}
    <div>
      <li>Id : {{ book.id }}</li>
    </div>
    <div>
        <li>Titre du livre : {{ book.title }}</li>
    </div>
    <div>
        <li>Prix du livre : {{ book.price }}</li>
    </div>
    <div>
      <button type="submit"><a href="{{ path('app_admin_book_update', {'id': book.id}) }}">Modifier ou Supprimer</a></button>
    </div>
    {% endfor %}

</div>

<button><a href="{{ path('app_admin_book_newBook') }}">Ajouter un nouveau livre</a></button>

<a href="{{ path('app_admin_book_index') }}">Retour Ã  l'accueil</a>


{% endblock %}